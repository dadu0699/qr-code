{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    },
    "verbatimModuleSyntax": true,
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
